- if notice.present?
  %p.text-green-600.mb-4= notice

.max-w-3xl.mx-auto
  %h1.text-3xl.font-bold.text-gray-800= @article.title

  %dl.mt-6.space-y-4
    .flex
      %dt.w-24.font-semibold.text-gray-600 公開状態
      %dd.text-gray-800= @article.published_at.present? ? "公開中 (#{l(@article.published_at)})" : '下書き'

    .flex
      %dt.w-24.font-semibold.text-gray-600 作成日時
      %dd.text-gray-800= l(@article.created_at)

    .flex
      %dt.w-24.font-semibold.text-gray-600 更新日時
      %dd.text-gray-800= l(@article.updated_at)

  .mt-8.text-gray-700.leading-relaxed
    .markdown-body
      = markdown(@article.body)

  .mt-8.space-x-4
    = link_to '編集', edit_admins_article_path(@article), class: 'text-blue-600 hover:underline'
    = button_to '削除', admins_article_path(@article), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: 'inline text-red-600 hover:underline'
    = link_to '一覧に戻る', admins_articles_path, class: 'text-gray-600 hover:underline'
